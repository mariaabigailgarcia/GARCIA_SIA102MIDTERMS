@using GARCIA_SIA102Midterms.DTOs
@model AuthorReadDto

<h2>Author Details</h2>

<div>
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.AuId</dd>

        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.FullName</dd>

        <dt class="col-sm-2">City</dt>
        <dd class="col-sm-10">@Model.City</dd>

        <dt class="col-sm-2">State</dt>
        <dd class="col-sm-10">@Model.State</dd>
    </dl>
</div>

<p>
    <a asp-action="Edit" asp-route-id="@Model.AuId" class="btn btn-warning">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back</a>
</p>
