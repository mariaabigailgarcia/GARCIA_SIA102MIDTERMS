@using GARCIA_SIA102Midterms.DTOs
@model PublisherReadDto

<h2>Delete Publisher</h2>

<h4>Are you sure you want to delete this publisher?</h4>

<div>
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.PubId</dd>

        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.PubName</dd>

        <dt class="col-sm-2">City</dt>
        <dd class="col-sm-10">@Model.City</dd>

        <dt class="col-sm-2">State</dt>
        <dd class="col-sm-10">@Model.State</dd>

        <dt class="col-sm-2">Country</dt>
        <dd class="col-sm-10">@Model.Country</dd>

        <dt class="col-sm-2">Info</dt>
        <dd class="col-sm-10">@Model.PrInfo</dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="PubId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
