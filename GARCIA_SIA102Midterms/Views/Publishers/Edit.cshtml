@using GARCIA_SIA102Midterms.DTOs
@model PublisherUpdateDto

<h2>Edit Publisher</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="PubId" />

    <div class="form-group">
        <label asp-for="PubName"></label>
        <input asp-for="PubName" class="form-control" />
        <span asp-validation-for="PubName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="City"></label>
        <input asp-for="City" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="State"></label>
        <input asp-for="State" class="form-control" />
        <span asp-validation-for="State" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Country"></label>
        <input asp-for="Country" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="PrInfo"></label>
        <textarea asp-for="PrInfo" class="form-control"></textarea>
    </div>

    <button type="submit" class="btn btn-success">Save Changes</button>
    <a asp-action="Index" class="btn btn-secondary">Back</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
