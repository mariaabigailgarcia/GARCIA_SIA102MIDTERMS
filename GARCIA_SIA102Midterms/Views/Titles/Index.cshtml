@using GARCIA_SIA102Midterms.DTOs
@model IEnumerable<TitleReadDto>

<h2>Titles</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Title</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Type</th>
            <th>Price</th>
            <th>YTD Sales</th>
            <th>Publisher</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var t in Model)
        {
            <tr>
                <td>@t.Title</td>
                <td>@t.Type</td>
                <td>@t.Price?.ToString("C")</td>
                <td>@t.YtdSales</td>
                <td>@t.PublisherName</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@t.TitleId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@t.TitleId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@t.TitleId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
