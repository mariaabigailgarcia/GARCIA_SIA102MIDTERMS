@using GARCIA_SIA102Midterms.DTOs
@model TitleReadDto

<h2>Title Details</h2>

<div>
    <dl class="row">
        <dt class="col-sm-2">Title</dt>
        <dd class="col-sm-10">@Model.Title</dd>

        <dt class="col-sm-2">Type</dt>
        <dd class="col-sm-10">@Model.Type</dd>

        <dt class="col-sm-2">Publisher</dt>
        <dd class="col-sm-10">@Model.PublisherName</dd>

        <dt class="col-sm-2">Price</dt>
        <dd class="col-sm-10">@Model.Price?.ToString("C")</dd>

        <dt class="col-sm-2">Advance</dt>
        <dd class="col-sm-10">@Model.Advance?.ToString("C")</dd>

        <dt class="col-sm-2">Royalty</dt>
        <dd class="col-sm-10">@Model.Royalty</dd>

        <dt class="col-sm-2">YTD Sales</dt>
        <dd class="col-sm-10">@Model.YtdSales</dd>

        <dt class="col-sm-2">Publication Date</dt>
        <dd class="col-sm-10">@Model.Pubdate.ToShortDateString()</dd>

        <dt class="col-sm-2">Notes</dt>
        <dd class="col-sm-10">@Model.Notes</dd>

        <dt class="col-sm-2">Authors</dt>
        <dd class="col-sm-10">
            @if (Model.Authors.Any())
            {
                <ul>
                    @foreach (var author in Model.Authors)
                    {
                        <li>@author</li>
                    }
                </ul>
            }
            else
            {
                <span>No authors assigned</span>
            }
        </dd>
    </dl>
</div>

<p>
    <a asp-action="Edit" asp-route-id="@Model.TitleId" class="btn btn-primary">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</p>
